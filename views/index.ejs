    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="/javascripts/jquery-linedtextarea.js"></script>
    <script>

      $(function() {
        $('#text').linedtextarea();
      });

      $('#form').submit(function(event){
        event.preventDefault();
        var text = $('#form').serialize();
        $.ajax({
          url: '/mdown',
          type: 'POST',
          data: text,
          processData: false
        })
        .done(function(response){
          $('#wrapper').empty();
          $('#htmlMD').val('');
          $('#wrapper').append(response);
          $('#htmlMD').val(response);
        });
      });

      $('#pdfExport').click(function(event){
        event.preventDefault();
        $('#pdfExport').prepend('<head><link rel=\'stylesheet\' type=\'text/css\' href=\'/stylesheets/markdown.css\' /></head>');
        var textHtml = $('#htmlForm').serialize();
        $.ajax({
          url: '/pdfExport',
          method: 'POST',
          data: textHtml,
          //dataType: 'text/html',
          processData: false
        })
        .done(function(response, status, xhr){
          console.log(response);

          var filename = "";
          var disposition = xhr.getResponseHeader('Content-Disposition');
          if (disposition && disposition.indexOf('attachment') !== -1) {
              var filenameRegex = /filename[^;=\n]*=((['"]).*?\2|[^;\n]*)/;
              var matches = filenameRegex.exec(disposition);
              if (matches != null && matches[1]) { 
                filename = matches[1].replace(/['"]/g, '');
              }
          }

          var element = document.createElement('a');
          element.setAttribute('href', filename);
          element.setAttribute('download', filename);

          element.style.display = 'none';
          document.body.appendChild(element);

          element.click();

          console.log(element);

          document.body.removeChild(element);

        });
      });

      $('#mdExport').click(function(event){
        event.preventDefault();
        var textMD = $('#text').val();
        var element = document.createElement('a');
        element.setAttribute('href', 'data:text/plain;charset=utf-8,' + encodeURIComponent(textMD));
        element.setAttribute('download', 'conversion.md');

        element.style.display = 'none';
        document.body.appendChild(element);

        element.click();

        document.body.removeChild(element);
      })

    </script>
  </body>
</html>
